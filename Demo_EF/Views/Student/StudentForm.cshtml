@model Demo_EF.ViewModels.StudentFormViewModel
@{
    ViewBag.Title = "StudentForm";
}

<h2>Student Form</h2>
@using (Html.BeginForm("Save", "Student"))
{
    <div class="form-group">
        @Html.LabelFor(s => s.Student.Stud_Name)
        @Html.TextBoxFor(s => s.Student.Stud_Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Student.Email)
        @Html.TextBoxFor(s => s.Student.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Student.Course)
        @Html.DropDownListFor(m => m.Student.CourseId, new SelectList(Model.Courses, "Id", "Course_Name"), "Select Course", new { @class = "form-control" })
    </div>
    @Html.HiddenFor(m => m.Student.Id)
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
}

